        border: 1px solid #ddd;
        text-align: center;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    td[contenteditable="true"] {
        background-color: #e9f5e9;
        outline: none;
    }

    .control-label {
        font-weight: bold;
    }

    .button-container {
        text-align: right;
        margin-top: 20px;
    }

