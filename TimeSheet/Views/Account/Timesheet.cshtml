@model IEnumerable<TimeSheet.Models.Timesheet>

@{
    ViewData["Title"] = "Timesheet List";
}

<h2>Timesheet List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Timesheet</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Project</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
            <th>Total Hours</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Project</td>
                <td>@item.Monday</td>
                <td>@item.Tuesday</td>
                <td>@item.Wednesday</td>
                <td>@item.Thursday</td>
                <td>@item.Friday</td>
                <td>@item.Saturday</td>
                <td>@item.Sunday</td>
                <td>@item.TotalHours</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
